# Development Environment Variables
NODE_ENV="development"

# Frontend URL
NEXT_PUBLIC_FRONTEND_URL="http://localhost:3000"

# Backend URL  
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Database
DATABASE_URL="mysql://username:password@host:3306/database_name"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET="your-bucket-name"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_PUBLIC_DEV_URL="https://your-r2-public-url.r2.dev"

# File Upload Settings
UPLOAD_MAX_SIZE="52428800"
UPLOAD_TIMEOUT="300000"
UPLOAD_COMPRESSION_QUALITY="0.8"
UPLOAD_MAX_WIDTH="1920"
UPLOAD_MAX_HEIGHT="1080"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-secret-key"

# LINE Login
LINE_CLIENT_ID="your-line-client-id"
LINE_CLIENT_SECRET="your-line-client-secret"

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Payment Slip Verification APIs
SLIPOK_API_KEY="your-slipok-api-key"
EASYSLIP_API_KEY="your-easyslip-api-key"

# Email Configuration
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# SMTP Settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"